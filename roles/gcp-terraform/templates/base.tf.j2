#
# The base template includes network components and service accounts
#

terraform {
  backend "gcs" {
    bucket  = "{{ openshift_gcp_prefix }}terraform-state"
    prefix  = "cluster-core"
  }
}

provider "google" {
  project = "{{ openshift_gcp_project }}"
  region = "{{ openshift_gcp_region }}"
}

# FIXME - Support using existing network/subnetwork
resource "google_compute_network" "{{ openshift_gcp_network_name }}" {
  name = "{{ openshift_gcp_network_name }}"
  auto_create_subnetworks = false
}

resource "google_compute_subnetwork" "{{ openshift_gcp_subnetwork_name }}" {
  name = "{{ openshift_gcp_subnetwork_name }}"
  ip_cidr_range = "{{ openshift_gcp_subnetwork_ip_cidr_range | default('10.0.0.0/24') }}"
  network = "${google_compute_network.{{ openshift_gcp_network_name }}.self_link}"
}

resource "google_service_account" "{{ openshift_gcp_master_service_account }}" {
  account_id = "{{ openshift_gcp_master_service_account }}"
  display_name = "{{ cluster_name }} master"
}

resource "google_project_iam_member" "{{ openshift_gcp_master_service_account }}-compute-admin" {
  role = "roles/compute.admin"
  member = "serviceAccount:${google_service_account.{{ openshift_gcp_master_service_account }}.email}"
}

resource "google_service_account" "{{ openshift_gcp_node_service_account }}" {
  account_id = "{{ openshift_gcp_node_service_account }}"
  display_name = "{{ cluster_name }} node"
}

resource "google_project_iam_member" "{{ openshift_gcp_node_service_account }}-compute-viewer" {
  role = "roles/compute.viewer"
  member = "serviceAccount:${google_service_account.{{ openshift_gcp_node_service_account }}.email}"
}

# FIXME - etcd may not be located on the master...
resource "google_compute_firewall" "{{ openshift_gcp_prefix }}master-etcd" {
  name = "{{ openshift_gcp_prefix }}master-etcd"
  network = "${google_compute_network.{{ openshift_gcp_network_name }}.name}"
  allow {
    protocol = "tcp"
    ports = ["2379", "2380"]
  }
  source_tags = ["{{ openshift_gcp_prefix }}node-master"]
  target_tags = ["{{ openshift_gcp_prefix }}node-master"]
}

resource "google_compute_firewall" "{{ openshift_gcp_prefix }}master-https" {
  name = "{{ openshift_gcp_prefix }}master-https"
  network = "${google_compute_network.{{ openshift_gcp_network_name }}.name}"
  allow {
    protocol = "tcp"
    ports = ["443"]
  }
  source_ranges = ["0.0.0.0/0"]
  target_tags = ["{{ openshift_gcp_prefix }}node-master"]
}

resource "google_compute_firewall" "{{ openshift_gcp_prefix }}master-skydns" {
  name = "{{ openshift_gcp_prefix }}master-skydns"
  network = "${google_compute_network.{{ openshift_gcp_network_name }}.name}"
  allow {
    protocol = "tcp"
    ports = ["8053"]
  }
  source_tags = ["{{ openshift_gcp_prefix }}node"]
  target_tags = ["{{ openshift_gcp_prefix }}node-master"]
}

resource "google_compute_firewall" "{{ openshift_gcp_prefix }}node-kublet" {
  name = "{{ openshift_gcp_prefix }}node-kublet"
  network = "${google_compute_network.{{ openshift_gcp_network_name }}.name}"
  allow {
    protocol = "tcp"
    ports = ["10250"]
  }
  source_tags = ["{{ openshift_gcp_prefix }}node-master"]
  target_tags = ["{{ openshift_gcp_prefix }}node"]
}

resource "google_compute_firewall" "{{ openshift_gcp_prefix }}node-kubeproxy" {
  name = "{{ openshift_gcp_prefix }}node-kubeproxy"
  network = "${google_compute_network.{{ openshift_gcp_network_name }}.name}"
  allow {
    protocol = "tcp"
    ports = ["10256"]
  }
  source_ranges = ["35.191.0.0/16", "130.211.0.0/22", "209.85.152.0/22", "209.85.204.0/22"]
  target_tags = ["{{ openshift_gcp_prefix }}node"]
}

resource "google_compute_firewall" "{{ openshift_gcp_prefix }}node-sdn" {
  name = "{{ openshift_gcp_prefix }}node-sdn"
  network = "${google_compute_network.{{ openshift_gcp_network_name }}.name}"
  allow {
    protocol = "udp"
    ports = ["4789"]
  }
  source_tags = ["{{ openshift_gcp_prefix }}node"]
  target_tags = ["{{ openshift_gcp_prefix }}node"]
}

{% if not openshift_provision_use_controller
   and openshift_provision_management_source_ip_range
%}
resource "google_compute_firewall" "{{ openshift_gcp_prefix }}mangement-to-node-ssh" {
  name = "{{ openshift_gcp_prefix }}mangement-to-node-ssh"
  network = "${google_compute_network.{{ openshift_gcp_network_name }}.name}"

  allow {
    protocol = "tcp"
    ports = ["22"]
  }
  source_ranges = ["{{ openshift_provision_management_source_ip_range }}"]
  target_tags = ["{{ openshift_gcp_prefix }}node"]
}
{% endif %}

resource "google_dns_managed_zone" "{{ openshift_gcp_dns_zone_name }}" {
  name        = "{{ openshift_gcp_dns_zone_name }}"
  dns_name    = "{{ openshift_provision_dns_cluster_domain }}."
  description = "{{ cluster_name }} managed by terraform"
}

output "cloud_dns_servers" {
  value = "${google_dns_managed_zone.{{ openshift_gcp_dns_zone_name }}.name_servers}"
}

{% if openshift_gcp_dns_delegation_zone_name is defined %}
data "google_dns_managed_zone" "{{ openshift_gcp_dns_delegation_zone_name }}" {
  name = "{{ openshift_gcp_dns_delegation_zone_name }}"
}

resource "google_dns_record_set" "{{ openshift_gcp_prefix }}delegation" {
  name = "{{ openshift_provision_dns_cluster_domain }}."
  type = "NS"
  ttl  = 300
  managed_zone = "${data.google_dns_managed_zone.{{ openshift_gcp_dns_delegation_zone_name }}.name}"
  rrdatas = ["${google_dns_managed_zone.{{ openshift_gcp_dns_zone_name }}.name_servers}"]
}
{% endif %}
